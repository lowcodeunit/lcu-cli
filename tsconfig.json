{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "strictNullChecks": false,
    // "noImplicitAny": false,
    "typeRoots": [
      "./@types", 
      "./node_modules/@types"
    ],
    "lib": [
      "es6", 
      "es2018", 
      "es2017", 
      "es2015", 
      "dom"
    ],
  },
  "include": [
    "./src/**/*.ts"
   ],
  "exclude": [
    "./node_modules",
    "./@types"
   ]
}